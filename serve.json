{
  "rewrites": [
    { "source": "/en/**", "destination": "/$1" },
    { "source": "/de/**", "destination": "/$1" },
    { "source": "/zh/**", "destination": "/$1" },
    { "source": "/vi/**", "destination": "/$1" },
    { "source": "/en", "destination": "/index.html" },
    { "source": "/de", "destination": "/index.html" },
    { "source": "/zh", "destination": "/index.html" },
    { "source": "/vi", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "**/*",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
