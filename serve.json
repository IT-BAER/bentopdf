{
  "rewrites": [
    { "source": "/en/:path*", "destination": "/:path" },
    { "source": "/de/:path*", "destination": "/:path" },
    { "source": "/zh/:path*", "destination": "/:path" },
    { "source": "/vi/:path*", "destination": "/:path" },
    { "source": "/en", "destination": "/index.html" },
    { "source": "/de", "destination": "/index.html" },
    { "source": "/zh", "destination": "/index.html" },
    { "source": "/vi", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "config.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, no-cache, must-revalidate"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }
      ]
    },
    {
      "source": "**/*",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
